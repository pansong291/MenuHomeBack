<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal">

		<Button
			android:text="启动"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onStartClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>

		<Button
			android:text="关闭"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onStopClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical">

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/cb_main_show_toast"
			android:text="开启按键提示"
			android:onClick="onCheckBoxClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/cb_main_auto_hide"
			android:text="点击按钮后隐藏子菜单"
			android:onClick="onCheckBoxClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/cb_main_vibrate_feedback"
			android:text="震动反馈"
			android:onClick="onCheckBoxClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="match_parent"
			android:text="震动强度："
			android:textColor="#646464"/>

		<RadioGroup
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<RadioButton
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="较弱"
                android:onClick="onRadioBtnClick"
				android:id="@+id/rb_main_vibrate_low"/>

			<RadioButton
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="适中"
                android:onClick="onRadioBtnClick"
				android:id="@+id/rb_main_vibrate_middle"/>

			<RadioButton
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="较强"
                android:onClick="onRadioBtnClick"
				android:id="@+id/rb_main_vibrate_high"/>

		</RadioGroup>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:text="@string/txt_main_info"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:textColor="#000000"/>

</LinearLayout>

